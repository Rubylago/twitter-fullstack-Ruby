<div class="container-fluid">
  <div class="row">
    <div class="col-2 m-0 p-0">
      {{> adminLeft}}
    </div>

    <div class="col-10 m-0 p-0">

      <!-- title -->
      <div class="border-bottom">
        <h5 class="p-3 font-weight-bold mb-0">使用者列表</h5>
      </div>

      <!-- users -->
      <div class="container mt-3">
        <div class="row">

          {{#each user}}
          <div class="col-3 p-1" style="border-radius: 5px;">

            <div class="card mb-2 mr-1" style="width: 100%; background-color: rgb(247, 247, 247);border-color: white;">

              <img class="card-img-top" style="height: 150px" src="{{ this.cover }}" alt="{{ this.name }}">

              <img src="{{ this.avatar }}" class="border-avatar"
                style="border-radius: 50%; height: 100px; width: 100px;" alt="{{ this.name }}">

              <div class="card-body text-center">

                <h6 class="mt-3 mb-1" style="font-weight: 700;letter-spacing: .5px;">
                  {{ this.name }}
                </h6>

                <p class="mb-3" style="color: grey">
                  @{{ this.account }}
                </p>

                <div>
                  <span>{{this.tweetCount}} 則留言</span>
                  <span>有了{{this.likeCount}}喜歡</span>
                </div>

                <div class="mt-3">
                  {{ this.Followings.length }} 個<span>跟隨中</span>
                  {{ this.Followers.length }} 位<span>跟隨者</span>
                </div>

              </div>
            </div>
          </div>
          {{/each}}
        </div>
      </div>

    </div>
  </div>

</div>