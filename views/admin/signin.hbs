<div class="container">
  <div class="row d-flex justify-content-center">
    <div class="col-5">
      <div class="img mt-5 d-flex flex-column align-items-center">
        <strong class="mt-3 mb-2" style="font-size:23px">後台登入</strong>
      </div>

      <form action="/admin/signin" method="POST">

        <div class="form-group">
          <input type="text" class="form-control" id="account" name="account" placeholder="帳號">
        </div>

        <div class="form-group mt-4">
          <input type="password" class="form-control" id="password" name="password" placeholder="密碼">
        </div>
        <div class="mb-4 text-center">
          <button class="btn btn-block mt-4" style="border-radius: 30px; background-color:#FF6600; color: white"
            type="submit">登入</button>
        </div>


        <div class="mt-3 d-flex justify-content-end">
          <p>
            <a href="/signin">前台登入
            </a>
          </p>
        </div>
      </form>
    </div>
  </div>
</div>